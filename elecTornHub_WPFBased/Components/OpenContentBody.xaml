<UserControl x:Class="elecTornHub_WPFBased.Components.OpenContentBody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localExtras="clr-namespace:elecTornHub_WPFBased.Extras"
             xmlns:localComponents="clr-namespace:elecTornHub_WPFBased.Components"
             Width="Auto" Height="Auto"
             >

    <Border HorizontalAlignment="Center"
VerticalAlignment="Center"
                            
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.5}"
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.03}"
Background="{x:Static localExtras:Variables.ColorOffWhite}"
CornerRadius="15"
BorderThickness="1"
                            BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
>
        <Grid
            
            VerticalAlignment="Center"
                Height="Auto"
Width="Auto"
                             Margin="10"
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                                   x:Name="OpenContentBody_Picture"
                   Source="/elecTornHub_WPFBased;component/Resources/Images/dummy_product.png" 
                                       Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.5}"
                                       Margin="0"/>
            <StackPanel
                                     Grid.Column="1" Grid.Row="1"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                >
                <TextBlock
                                    x:Name="OpenContentBody_Title"
                    Text="Laptop ACER Intel Core"
                    FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}"
                    FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>


                <Border HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        CornerRadius="8"
        BorderThickness="2"
        BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
                        x:Name="OpenContentBody_EditTitleBorder"
                        >
                    <TextBox HorizontalAlignment="Stretch"
                             Text="Laptop ACER Intel Core"
             VerticalAlignment="Center"
             x:Name="OpenContentBody_EditTitle"
                                 FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}"
                    FontWeight="DemiBold"
             BorderThickness="0"
             Background="Transparent"
             Padding="6,5" />
                </Border>
                
                <TextBlock
                    x:Name="OpenContentBody_Seller"
                    Text="dijual oleh Cornelius Arden" FontSize="{x:Static localExtras:Variables.FontSizeSM}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                                        />
                <ScrollViewer
                    x:Name="OpenContentBody_Desc"
                    VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                              Margin="0,15"
                                              Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=2}"
                              Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                              >
                    <TextBlock
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.05}"
                        HorizontalAlignment="Left"
                    Text="Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh. Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh."
                    FontSize="{x:Static localExtras:Variables.FontSizeMD}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                        />
                </ScrollViewer>

                <Border HorizontalAlignment="Stretch"
VerticalAlignment="Center"
CornerRadius="8"
BorderThickness="2"
                        Margin="0,10"
BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
                    x:Name="OpenContentBody_EditDescBorder"
                        Padding="0,0,10,0"
                        >
                    <ScrollViewer
    VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.9}"
              Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                    Padding="6,5"
                        >
                    
                        <TextBox HorizontalAlignment="Stretch"
                             Text="Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh. Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh."
             VerticalAlignment="Center"
             x:Name="OpenContentBody_EditDesc"
                                FontSize="{x:Static localExtras:Variables.FontSizeMD}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
             BorderThickness="0"
             Background="Transparent"
              />
                </ScrollViewer>
                    </Border>

                <Grid
            
            VerticalAlignment="Bottom"
                Height="Auto"
Width="Auto"
              >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                    <TextBlock
                        Grid.Column="0"
                                    x:Name="OpenContentBody_Price"
                    
                    Text="Rp. 694.646,-"
                        FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>

                        <StackPanel Orientation="Horizontal" x:Name="OpenContentBody_EditPriceBorder" VerticalAlignment="Center">
                            <TextBlock
                        Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="Rp. "
                        FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>
                            <Border HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        CornerRadius="8"
        BorderThickness="2"
        BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
                        
                        >
                                <TextBox HorizontalAlignment="Stretch"
                             Text="694646"
             VerticalAlignment="Center"
             x:Name="OpenContentBody_EditPrice"
                     FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
             BorderThickness="0"
             Background="Transparent"
             Padding="2" />
                            </Border>
                            <TextBlock
                        Grid.Column="0"
                    VerticalAlignment="Center"
                    Text=",-"
                                Margin="5,0,0,0"
                        FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>

                        </StackPanel>

                        <TextBlock
                                    x:Name="OpenContentBody_Stock"
                    Text="(stok tersedia 1 buah)" FontSize="{x:Static localExtras:Variables.FontSizeSM}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                                        />

                    <StackPanel 
                        Orientation="Horizontal" Margin="0, 10" VerticalAlignment="Center"
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                        >
                        <localComponents:CounterButton x:Name="OpenContentBody_Counter" Margin="0, 0, 10, 0" />
                        <Border
                                        x:Name="OpenContentBody_Button1"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorGreen}"
>
                            <Button
                    x:Name="OpenContentBody_Button1_Button"
    Content="Beli"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                        </Border>
                        <Border
                                        x:Name="OpenContentBody_Button2"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorDarkGray}"
>
                            <Button
                    x:Name="OpenContentBody_Button2_Button"
    Content="Hubungi"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                        </Border>
                        <Border
                                        x:Name="OpenContentBody_Button3"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorAccentOrange}"
>
                            <Button
                            x:Name="OpenContentBody_Button3_Button"
    Content="Lapor"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                        </Border>
                    </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Width="Auto" Margin="20,0,0,0"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                Orientation="Vertical"
                                x:Name="OpenContentBody_ReportTab"
                                VerticalAlignment="Bottom"
                                >
                        <TextBlock
                                    x:Name="OpenContentBody_ReportTab_Title"
                    Text="Laporan" FontSize="{x:Static localExtras:Variables.FontSizeMD}"
                            HorizontalAlignment="Right"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorAccentOrange}" FontWeight="Bold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                                        />
                        <Border
CornerRadius="3"
Background="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
                                            BorderThickness="1"
                                            BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
                HorizontalAlignment="Right"
VerticalAlignment="Bottom"
>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.6}"
              Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                              x:Name="OpenContentBody_ReportDesc"
                                          VerticalAlignment="Bottom"
                                          Padding="2,4,4,4"
                              >
                                <TextBox
                    x:Name="OpenContentBody_ReportMessage"
                                HorizontalAlignment="Center"
VerticalAlignment="Center"
                Text="Barang ini memiliki harga tidak masuk akal karena tampaknya terlalu menguntungkan penjual. Saya iri karena saya tidak bisa seperti ini."
                TextAlignment="Justify"
                FontSize="{x:Static localExtras:Variables.FontSizeSM}"
                FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
                Foreground="{x:Static localExtras:Variables.ColorDarkGray}"                
                Background="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
                TextWrapping="Wrap"
                BorderThickness="0"
                Width="Auto"
                />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
