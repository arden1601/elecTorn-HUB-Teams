<UserControl x:Class="elecTornHub_WPFBased.Components.AddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localExtras="clr-namespace:elecTornHub_WPFBased.Extras"
             Width="Auto" Height="Auto"
             >

    <Border Width="40" Height="40" CornerRadius="25" Background="{x:Static localExtras:Variables.ColorDarkGray}">
        <Button
        Style="{StaticResource NoHoverButtonStyle}"
        BorderThickness="0"
        BorderBrush="Transparent"
        Background="Transparent"
        Cursor="Hand"
        >
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{x:Static localExtras:Variables.FontSizeXL}" Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}" FontWeight="Bold" Padding="0,0,0,6">+</TextBlock>
        </Button>
    </Border>
</UserControl>
