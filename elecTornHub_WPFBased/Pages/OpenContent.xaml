<Window x:Class="elecTornHub_WPFBased.Pages.OpenContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localExtras="clr-namespace:elecTornHub_WPFBased.Extras"
        xmlns:localComponents="clr-namespace:elecTornHub_WPFBased.Components"
        mc:Ignorable="d"
        Title="Buy Stuff"
        Height="{x:Static localExtras:Variables.ScreenHeight}"
        Width="{x:Static localExtras:Variables.ScreenWidth}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Icon="../Resources/logo.ico"
        >

    <Window.Resources>
        <Style x:Key="NoHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{x:Static SystemColors.ControlBrush}" />
            <Setter Property="BorderBrush" Value="{x:Static SystemColors.ControlDarkBrush}" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <localExtras:GridSizeConverter x:Key="GridSizeConverter"/>
    </Window.Resources>

    <Grid
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
        HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Static localExtras:Variables.ColorOffWhite}">

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.12}"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.05}"
                Background="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
                CornerRadius="15"
                BorderThickness="1"
                Margin="0">

            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  Direction="270"
                                  ShadowDepth="3"
                                  BlurRadius="7"
                                  Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- This will take all available space for the main content -->
                    <RowDefinition Height="Auto" />
                    <!-- This row will be for the button at the bottom -->
                </Grid.RowDefinitions>

                <Grid
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Border}}}"
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Border}}}">

                    <localComponents:Navbar x:Name="NavbarControl" Type="User" Grid.Row="0" />

                    <Border HorizontalAlignment="Center"
VerticalAlignment="Center"
                            Margin="0, 40, 0, 0"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.5}"
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.03}"
Background="{x:Static localExtras:Variables.ColorOffWhite}"
CornerRadius="15"
BorderThickness="1"
                            BorderBrush="{x:Static localExtras:Variables.ColorDarkGray}"
>
                        <Grid
            
            VerticalAlignment="Center"
                Height="Auto"
Width="Auto"
                             Margin="10"
              >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                   Source="/elecTornHub_WPFBased;component/Resources/Images/dummy_product.png" 
                                       Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1.5}"
                                       Margin="0"/>
                            <StackPanel
                                     Grid.Column="1" Grid.Row="1"
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Border}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=1}"
                                >
                                <TextBlock
                    
                    Text="Laptop ACER Intel Core" FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>
                                <TextBlock
                    
                    Text="dijual oleh Cornelius Arden" FontSize="{x:Static localExtras:Variables.FontSizeSM}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                                        />
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                              Margin="0,15"
                                              Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Converter={StaticResource GridSizeConverter}, ConverterParameter=2}"
                                              >
                                    <TextBlock
                    
                    Text="Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh. Laptop ini merupakan laptop kesayangan saya, tapi laptop ini terlalu bagus untuk saya sehingga saya memutuskan untuk menjualnya. Spesifikasi masih bagus, dijual murah karena kebetulan lagi butuh uang untuk memenuhi kebutuhan anak dan istri. Bagi siapapun yang berniat membantu saya, mohon beli produk ini. Jika Anda tidak mau membeli padahal sudah membaca sampai sini, saya akan gunakan IP Address Anda untuk melacak posisi Anda dan mengejar Anda sampai ke pelaminan. Sekian terima kasih, terima lah lagu ini dari orang biasa. Mohon maaf jika ada salah kata, akhir kata saya mengucapkan minta maaf. Sampai jumpa dalam LAPTOP ACER INTEL 2025! Wassalamu’alaikum warahmatullahi wabarakatuh."
                                        FontSize="{x:Static localExtras:Variables.FontSizeMD}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>
                                </ScrollViewer>

                                <TextBlock
                    
                    Text="Rp. 694.646,-" FontSize="{x:Static localExtras:Variables.FontSizeLG}"
FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"/>

                                <TextBlock
                    
                    Text="(stok tersedia 1 buah)" FontSize="{x:Static localExtras:Variables.FontSizeSM}"
FontFamily="{x:Static localExtras:Variables.PrimaryFont}"
Foreground="{x:Static localExtras:Variables.ColorDarkGray}" FontWeight="DemiBold"
                           TextWrapping="Wrap" TextAlignment="Justify"
                                        />

                                <StackPanel Orientation="Horizontal" Margin="0, 10" VerticalAlignment="Center">
                                    <localComponents:CounterButton Margin="0, 0, 10, 0" />
                                    <Border
                HorizontalAlignment="Left"
VerticalAlignment="Bottom"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorGreen}"
>
                                        <Button
                    
                    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Content="Beli Sekarang"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                                    </Border>
                                    <Border
                HorizontalAlignment="Left"
VerticalAlignment="Bottom"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorDarkGray}"
>
                                        <Button
                    
                    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Content="Hubungi Pembeli"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                                    </Border>
                                    <Border
                HorizontalAlignment="Left"
VerticalAlignment="Bottom"
CornerRadius="3"
BorderBrush="Transparent"
Margin="0, 0, 10, 0"
Background="{x:Static localExtras:Variables.ColorAccentOrange}"
>
                                        <Button
                    
                    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    Content="Lapor"
    Style="{StaticResource NoHoverButtonStyle}"
    FontSize="{x:Static localExtras:Variables.FontSizeSM}"
    FontFamily="{x:Static localExtras:Variables.SecondaryFontBold}"
    Foreground="{x:Static localExtras:Variables.ColorAbsoluteWhite}"
    Background="Transparent"
    BorderThickness="0"
    BorderBrush="Transparent"
    Margin="15,5"
    Height="20"
    Cursor="Hand"
/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
